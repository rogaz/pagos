<h1>Listing categories</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <% if category.name == "CENAAC" %>
      <td><%= link_to 'Cargos por Pagar', patient_charges_to_pay_path(category.id) %></td>
    <% else %>
      <td><%= link_to 'Cargos por Pagar', student_charges_to_pay_path(category.id) %></td>
    <% end %>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
  </tr>
<% end %>
</table>

