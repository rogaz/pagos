<h2>Lista de Pacientes</h2>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Persona</th>
    <th>Categoría</th>
    <th>Costo de Sesión</th>
    <!--<th></th>-->
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.person.name %></td>
    <td><%= patient.category.name %></td>
    <td>$<%= patient.cost %>.00</td>
    <!--<td><%= link_to 'Detalles', patient %></td>-->
  </tr>
<% end %>
</table>

