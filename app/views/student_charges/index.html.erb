<h1>Listing student_charges</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Amount</th>
    <th>Surcharge</th>
    <th>Liquidated</th>
    <th>Description</th>
    <th>Date</th>
    <th>Student_ID</th>
    <th>Student</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @student_charges.each do |student_charge| %>
  <tr>
    <td><%= student_charge.amount %></td>
    <td><%= student_charge.surcharge %></td>
    <td><%= student_charge.liquidated %></td>
    <td><%= student_charge.description %></td>
    <td><%= student_charge.date %></td>
    <td><%= student_charge.student_id %></td>
    <td><%= student_charge.student.person.name %></td>
    <td><%= link_to 'Show', student_charge %></td>
    <td><%= link_to 'Edit', edit_student_charge_path(student_charge) %></td>
    <td><%= link_to 'Destroy', student_charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

