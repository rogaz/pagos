<h1>Lista de los pagos de Estudiantes</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Cantidad</th>
    <th>Fecha</th>
    <th>Cargo con Fecha</th>
    <!--<th></th>-->
  </tr>

<% @student_payments.each do |student_payment| %>
  <tr>
    <td><%= student_payment.amount %></td>
    <td><%= date_with_format(student_payment.date) %></td>
    <td><%= student_payment.student_charge.student.person.name + "\n" + date_with_format(student_payment.student_charge.date).to_s %></td>
    <!--<td><%= link_to 'Detalles', student_payment %></td>-->
  </tr>
<% end %>
</table>
