
<h2><%= @patient_charge.patient.person.name %></h2>
<%= link_to "Ver otros cargos", people_charges_path(@patient_charge.patient.person), :class => "btn btn-inverse" %><br/><br/>
<div class="row-fluid marketing">
  <div class="span7">
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th><b>Cantidad</b></th>
        <td>$<%= @patient_charge.amount %>.00</td>
      </tr>
      <tr>
        <th><b>Liquidado</b></th>
        <td><% unless @patient_charge.liquidated == "si" %><i class="icon-remove"></i><% else %><i class="icon-ok"></i><% end %></td>
      </tr>
      <tr>
        <th><b>Descripci√≥n</b></th>
        <td><%= @patient_charge.description %></td>
      </tr>
      <tr>
        <th><b>Fecha</b></th>
        <td><%= @patient_charge.date %></td>
      </tr>
      <tr>
        <th><b>Paciente ID</b></th>
        <td><%= @patient_charge.patient_id %></td>
      </tr>
    </table>
  </div>

  <div class="span5">
    <%= form_for @patient_payment do |f| %>
      <% if @patient_payment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@patient_payment.errors.count, "error") %> prohibited this student_payment from being saved:</h2>

          <ul>
            <% @patient_payment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label "Cantidad" %>
        <%= f.number_field :amount %>
      </div>

      <%= f.hidden_field :patient_charge_id, value: @patient_charge.id  %>

      <div class="actions">
        <%= f.submit "Agregar pago", :class => "btn" %>
      </div>
    <% end %>
  </div>

</div>

<div class="row-fluid">

  <% @payments_total = 0 %>
  <% @patient_charge.patient_payments.each do |pago| %>
    <% @payments_total = @payments_total + pago.amount %>
  <% end %>
  <div class="span3">
    <h3>
      <b>Debe</b><br/>
      $<%= @patient_charge.amount - @payments_total %>.00
    </h3>
  </div>
  <div class="span3">
    <h3>
      <b>Pagado</b><br/>
      $<%= @payments_total %>.00
    </h3>
  </div>
</div>

<table  class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Cantidad</th>
    <th>Fecha</th>
    <th>Cargo de Paciene</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patient_payments.each do |patient_payment| %>
  <tr>
    <td><%= patient_payment.amount %></td>
    <td><%= patient_payment.date %></td>
    <td><%= patient_payment.patient_charge_id %></td>
    <td><%= link_to 'Show', patient_payment %></td>
    <td><%= link_to 'Edit', edit_patient_payment_path(patient_payment) %></td>
    <td><%= link_to 'Destroy', patient_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
