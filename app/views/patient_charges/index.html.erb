<script type="text/javascript">
  $('.carousel').carousel();
</script>

<% bandera = false %>
<div id="Pagination" class="carousel slide">
<% if @category.nil? %>
  <h2>Lista de Cargos de Pacientes</h2>
<% else %>
  <h2>Lista de Cargos no Liquidados de <%= @category.name %></h2>
<% end %>
<div class="carousel-inner">
<% @patient_charges_months.sort.reverse.each do |month, patient_charges| %>
  <% not_liquidated = 0 %>
  <% liquidated = 0 %>
    <% if !bandera %>
      <div class="item active">
    <% else %>
      <div class="item">
    <% end %>

    <% bandera = true if !bandera %>
    <h2><%= month %></h2>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Cantidad</th>
      <th>Liquidado</th>
      <th>Descripci√≥n</th>
      <th>Fecha</th>
      <th>Paciente</th>
      <!--<th></th>
      <th></th>
      <th></th>-->
    </tr>
    <% patient_charges.each do |patient_charge| %>
      <tr>
        <td>$<%= patient_charge.amount %>.00</td>
        <td><% unless patient_charge.liquidated == "si" %><i class="icon-remove"></i><% else %><i class="icon-ok"></i><% end %></td>
        <td><%= patient_charge.description %></td>
        <td><%= date_with_format(patient_charge.date) %></td>
        <td><%= patient_charge.patient.person.name %></td>
        <!--<td><%= link_to 'Detalles', patient_charge %></td>
        <td><%= link_to 'Editar', edit_patient_charge_path(patient_charge) %></td>
        <td><%= link_to 'Eliminar', patient_charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
      <% patient_charge.liquidated == "no" ? not_liquidated = not_liquidated + 1 : liquidated = liquidated + 1 %>
    <% end %>
  </table>

  <div class="row-fluid">
    <div class="span3">
      Cargos No Liquidados<br/>
      <%= not_liquidated %>
    </div>
    <div class="span3">
      Cargos Liquidados<br/>
      <%= liquidated %>
    </div>
    <div class="span3">
      Total de Cargos<br/>
      <%= patient_charges.count %>
    </div>
  </div>
  <% if !bandera %>
    </div>
  <% else %>
    </div>
  <% end %>
<% end %>
  </div>
  <a class="carousel-control left" style="left: -50px; top:50px;" href="#Pagination" data-slide="prev" data-interval="5000" data-pause="hover">&lsaquo;</a>
  <a class="carousel-control right" style="right: -50px; top:50px;" href="#Pagination" data-slide="next" data-interval="5000" data-pause="hover">&rsaquo;</a>
</div>